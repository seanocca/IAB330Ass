<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StandBand.SignUpPage">
    <ContentPage.Content>
        <StackLayout>
            <Label 
                Text="Full Name:"
                VerticalOptions="Center"
                HorizontalOptions="CenterAndExpand" />

            <Label 
                Text="Email Address:"
                VerticalOptions="Center"
                HorizontalOptions="CenterAndExpand" />

            <Label
                Text="Username:"
                VerticalOptions="Center"
                HorizontalOptions="CenterAndExpand" />

            <Label 
                Text="Password:"
                VerticalOptions="Center"
                HorizontalOptions="CenterAndExpand" />

            <Button
                Text="Submit"
                VerticalOptions="Center"
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StandBand.InstancePage" Title="Host Or Guest">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="CenterAndExpand">
            <Label Text="Please Choose to be a" />
            <Label Text="Guest or a Host" />
            <Button Text="Guest" Clicked="OnGuestClicked" />
            <Button Text="Host" Clicked="OnHostClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
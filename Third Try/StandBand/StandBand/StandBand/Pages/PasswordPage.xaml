<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StandBand.PasswordPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Label Text="Please Enter a Username:" HorizontalOptions="Center"/>
            <Entry Placeholder="Username" x:Name="forgotUsername" />
            <Label x:Name="usernameError" />
            <Button Text="Get Password" Clicked="OnForgotPassword" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
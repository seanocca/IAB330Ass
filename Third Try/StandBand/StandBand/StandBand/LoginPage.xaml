<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:StandBand"
             x:Class="StandBand.LoginPage" Title="Login">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Label Text="Stand Band" FontSize="Large" TextColor="Blue" HorizontalOptions="Center" />
            <Entry Placeholder="Username" x:Name="username" />
            <Entry Placeholder="Password" x:Name="password" IsPassword="True" />
            <Button Text="Login" x:Name="login" Clicked="OnLogin" HorizontalOptions="Center" />
            <Button Text="Register" x:Name="signup" Clicked="OnRegister" HorizontalOptions="Center" />
            <Button Text="Forgot Password?" x:Name="forgot_pass" Clicked="OnForgot" HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
